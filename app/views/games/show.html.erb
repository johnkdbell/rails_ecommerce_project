<div class="container">
  <h1><%= @game.name %></h1>

  <div class="container">

    <p>
      <strong>Genre: </strong>
      <%= @game.genre %>
    </p>
    <p>
      <strong>Platform: </strong>
      <%= link_to @game.platform.title, @game.platform %>
    </p>

    <p>
      <strong>Developer: </strong>
      <%= @game.developer %>
