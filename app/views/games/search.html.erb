<% content_for(:html_title) { "Search: " + params[:keywords] } %>

<p class="">Search results found <%= pluralize(@games.count, 'video game') %> when searching for: <%= params[:keywords] %> <%= "(" + params[:platform] + ")"%></p>

<span>
  <ul>
    <% @games.each do |game| %>
      <li><%= link_to game.name, game %></li>
    <% end %>
  </ul>
</span>
