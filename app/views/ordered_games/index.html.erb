<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>Current Cart</h2>

<% @items.each do |item| %>
  <%= item.game.name %>
  <%= number_to_currency item.unit_price %>

  <%= form_for item, method: :delete do |f| %>
    <%= hidden_field_tag :name, item.game.name %>
    <%= f.submit "❌",:style=>"background: none;border: none;padding: 0;font: inherit;cursor: pointer;outline: inherit;" %>
  <% end %>
  <%= form_tag ordered_games_path, :class=>"form-inline" do %>
    <%= hidden_field_tag :game_id, item.game.id %>
    <%= hidden_field_tag :name, item.game.name %>
    <%= number_field_tag :quantity, item.quantity, :min=> "1", :max=> "10", :style=>"border: 1;background-color: transparent;width:25px;" %>
    <%= submit_tag "Update", :style=>"background: none;border: none;padding: 0;font: inherit;cursor: pointer;outline: inherit;", data: { disable_with: 'One moment...' } %>
  <% end %>
<% end %>

